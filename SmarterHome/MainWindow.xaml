<Window x:Class="SmarterHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarterHome"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">
    <Grid Margin="0,0,-6.6,0">
        <TextBox x:Name="txtFamilyId" HorizontalAlignment="Left" Height="23" Margin="26,30,0,0" TextWrapping="Wrap" Text="FamilyId" VerticalAlignment="Top" Width="450" GotFocus="txtFamilyId_GotFocus"/>
        <!--<Image x:Name="LeftImage" HorizontalAlignment="Left" Height="212" Margin="10,37,0,0" VerticalAlignment="Top" Width="217"/>-->
        <Image x:Name="RightImage" HorizontalAlignment="Left" Height="343" Margin="26,100,0,0" VerticalAlignment="Top" Width="468"/>
        <TextBlock x:Name="MessageArea"  HorizontalAlignment="Left" Margin="26,461,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.559,-0.774" Height="99" Width="450"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="26,58,0,0" VerticalAlignment="Top" Width="450" Background="#1cb3bc" Click="btnStart_Click"/>

    </Grid>
</Window>
