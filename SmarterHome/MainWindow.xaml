<Window x:Class="SmarterHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarterHome"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="525">
    <Grid>
        <TextBox x:Name="txtFamilyId" HorizontalAlignment="Left" Height="23" Margin="42,30,0,0" TextWrapping="Wrap" Text="FamilyId" VerticalAlignment="Top" Width="434" GotFocus="txtFamilyId_GotFocus"/>
        <!--<Image x:Name="LeftImage" HorizontalAlignment="Left" Height="212" Margin="10,37,0,0" VerticalAlignment="Top" Width="217"/>-->
        <Image x:Name="RightImage" HorizontalAlignment="Left" Height="283" Margin="42,161,0,0" VerticalAlignment="Top" Width="434"/>
        <TextBlock x:Name="MessageArea" HorizontalAlignment="Left" Margin="42,123,0,0" TextWrapping="Wrap" Text="aaa" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="42,58,0,0" VerticalAlignment="Top" Width="434" Background="#1cb3bc" Click="btnStart_Click"/>
        <Button x:Name="button" Content="Test" HorizontalAlignment="Left" Margin="42,92,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
